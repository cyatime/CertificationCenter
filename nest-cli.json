{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "watchAssets": true,
    "assets": [
      {
        "include": "../views/*.hbs",
        "outDir": "./dist/views"
      },
      {
        "include": "../public/*.css",
        "outDir": "./dist/public"
      }
    ]
  }
}
